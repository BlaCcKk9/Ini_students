<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uni.inistudents">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.uni.inistudents.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IniStudents"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1983348292862214~7558344403"/>

        <activity android:name="com.uni.inistudents.ui.EnterPinActivity"></activity>
        <activity android:name="com.uni.inistudents.ui.WebViewActivity" />
        <activity android:name="com.uni.inistudents.ui.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>